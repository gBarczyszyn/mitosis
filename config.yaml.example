# ~/.mitosis/config.yaml

# ğŸ”— Remote Git repository to sync into
repo_url: git@github.com:gBarczyszyn/mitosis-gitops.git

# ğŸ§¬ Core dotfiles to track (always respected)
tracked_paths:
  - ~/.zshrc
  - ~/.p10k.zsh
  - ~/.aliases
  - ~/.gitconfig
  - ~/.vimrc
  - ~/.bash_profile

# â˜ï¸ AWS configuration
aws:
  enabled: true
  include_credentials: false  # only set to true if repo is private and secure

# ğŸ” SSH keys and config
ssh:
  enabled: true
  keys:
    - id_rsa.pub
    - config

# ğŸ§ª GitHub CLI settings
gh:
  enabled: true
  include_hosts: true

# ğŸ“ Neovim
nvim:
  enabled: true
  config_path: ~/.config/nvim

# ğŸ’» VSCode user settings
vscode:
  enabled: true
  settings: true
  keybindings: true

# ğŸ“ Extra custom files to track
custom:
  - ~/.local/bin/my-script
  - ~/scripts/cleanup.sh
